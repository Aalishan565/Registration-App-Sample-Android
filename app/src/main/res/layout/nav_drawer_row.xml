<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_50dp"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_drawer_icon"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_15dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:contentDescription="@string/app_name"
         />

    <TextView
        android:id="@+id/tv_drawer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginStart="@dimen/dimen_25dp"
        android:layout_toRightOf="@id/iv_drawer_icon"
        android:layout_toEndOf="@id/iv_drawer_icon"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimen_40dp"
        android:paddingEnd="@dimen/dimen_40dp"
        android:textColor="@color/colorPrimaryDark1"
        android:textSize="@dimen/text_size_15sp" />

</RelativeLayout>